/**app.wxss**/
.container {
  width: 100%;
  height: 100%;
} 
/*默认左右留白30rpx；*/
.basic-box{
  width: 92%;
  height: auto;
  margin: 0rpx auto;
  background-color: #fff;
}
.position-rela{
  position: relative;
}
.position-abso{
  position: absolute;
}
/*分隔*/
.separate-line{
  font-size: 30rpx;
  color: #333;
  margin: 30rpx 0;
}
.separate-line .red-star{
  color: rgb(235, 45, 45);
  display: inline-block;
  margin:0 30rpx;
}
/*列表*/
.list-item{
  font-size: 30rpx;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  border: 1rpx solid #f5f5f5;
}